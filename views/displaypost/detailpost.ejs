<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <!-- Bootstrap CSS -->
  <link href="./stylesheets/style.css" rel="stylesheet">
  <!-- Custom styles for this template -->
  <title>Blog Post</title>
</head>

<body>
  <!-- Navigation -->
  <%- include('../header'); %>
    <!-- Page Content, here we are zooming on a specific post clicked -->
    <div class="container">
      <div class="row">
        <!-- Post Content Column -->
        <div class="col-lg-8">
          <div id="article">
            <!-- Title -->
            <h1 class="mt-4">
              <%=post.title%>
            </h1>

            <!-- Author -->
            <h6>
              <b><a href="#">
                  <%=post.author%>
                </a></b> in <a href="/getcategory?name=<%=post.category%>">
                <%=post.category%>
              </a> - Posted on <%=dateFormat(post.datePublication)%>
            </h6>

            <img class="img-fluid rounded" src="<%=post.image%>" alt=""
              style=" height::100px; width:100%; object-fit:cover;">
            <hr>
            <!-- Post Content -->
            <p class="lead">
              <%=post.content%>
            </p>



            <!-- Displaying Comments that have been created -->

            <%for(i=1;i<comment.length;i++){ var displayClass="" ; if(comment.length>1){displayClass="media mb-4"}
              <!-- hiding if nothing is displayed -->
              %>

              <div class="media mb-4">
                <img class="d-flex mr-3 rounded-circle"
                  src="https://eu.ui-avatars.com/api/?name=<%=comment[i].commentAuthor%>" alt="" style="height:50px">
                <div class="media-body">
                  <h5 class="mt-0">
                    <%=comment[i].commentAuthor%> le <%=dateFormat(comment[i].commentDatePublication)%>
                  </h5>
                  <p>
                    <%=comment[i].description%>
                  </p>
                </div>
              </div>
              <%}%>

                <!-- Comments Form to create new comments -->
                <div class="card my-4">
                  <h5 class="card-header">Leave a Comment:</h5>
                  <div class="card-body">
                    <form action="/add-comment" method="POST">
                      <input type="hidden" name="id" value="<%=post.id%>"></input>
                      <div class="form-group">
                        <label for="nameAuthor">Nom de l'auteur</label>
                        <input type="text" class="form-control" name="nameAuthorComment" rows="1" required></textarea>
                      </div>
                      <div class="form-group">
                        <label for="nameAuthor">Texte:</label>
                        <input type="text" class="form-control" rows="3" name="contentComment" required></textarea>
                      </div>
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                  </div>
                </div>
          </div>
        </div>

        <!-- Sidebar  Column -->

        <div class="col-md-4">

          <!-- Search Widget -->
          <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-append">
                  <button class="btn btn-secondary" type="button">Go!</button>
                </span>
              </div>
            </div>
          </div>

          <!-- Categories Widget -->
          <%- include('../categories-widget'); %>


        </div>
        <!-- /.row -->

      </div>
      <!-- /.container -->

      <!-- Footer -->
      <footer class="py-5 bg-dark">
        <div class="container">
          <p class="m-0 text-center text-white">Copyright &copy; Hugo PAUL</p>
        </div>
        <!-- /.container -->
      </footer>

      <!-- Bootstrap core JavaScript -->
      <!-- Optional JavaScript -->
      <!-- jQuery first, then Popper.js, then Bootstrap JS -->
      <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>

</body>

</html>